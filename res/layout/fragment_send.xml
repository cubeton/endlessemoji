<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/send"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:text="@string/send_string"
        android:textSize="40dp" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/send_button_string" />
        
    <TextView
        android:id="@+id/message_repeat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_to"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="Repeat time:"
        android:textSize="20dp" />
     <TextView
        android:id="@+id/message_repeat_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_to"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/message_what"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_repeat"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="Message:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/message_what_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/message_repeat"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/message_to"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/send_button"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="Sending to:"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/message_to_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/send_button"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:textSize="20dp" />
</RelativeLayout>